{
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [{ "source": "/api/v1/:path*", "destination": "/api/:path*" }],
  "buildCommand": "node scripts/build.js",
  "env": {
    "VERCEL_ENV": "production",
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  }
}

